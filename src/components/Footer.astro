---
// Footer.astro - Componente de pie de página limpio y profesional

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'YouTube',
    href: '#',
    icon: `<path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>`,
  },
  {
    name: 'LinkedIn',
    href: '#',
    icon: `<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>`,
  },
  {
    name: 'Twitter',
    href: '#',
    icon: `<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>`,
  },
  {
    name: 'GitHub',
    href: '#',
    icon: `<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>`,
  },
];

const footerLinks = [
  {
    title: 'Curso',
    links: [
      { label: 'Temario', href: '/temario' },
      { label: 'Recursos', href: '/recursos' },
      { label: 'Metodología', href: '/metodologia' },
      { label: 'Certificación', href: '/certificacion' },
    ],
  },
  {
    title: 'Soporte',
    links: [
      { label: 'FAQ', href: '/faq' },
      { label: 'Contacto', href: '/contacto' },
      { label: 'Comunidad', href: '/comunidad' },
    ],
  },
  {
    title: 'Legal',
    links: [
      { label: 'Términos de uso', href: '/terminos' },
      { label: 'Privacidad', href: '/privacidad' },
    ],
  },
];
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 transition-colors duration-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Sección principal del footer -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      
      <!-- Branding y descripción -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-4 group">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-primary-500 to-accent-600 text-white font-bold text-lg shadow-md">
            <span aria-hidden="true">M</span>
          </div>
          <div class="flex flex-col">
            <span class="text-lg font-bold text-gray-900 dark:text-white leading-tight">
              Mecánica
            </span>
            <span class="text-xs text-gray-500 dark:text-gray-400 leading-tight">
              Medio Continuo
            </span>
          </div>
        </a>
        <p class="text-gray-600 dark:text-gray-400 text-sm max-w-sm mb-6">
          Domina los fundamentos de la mecánica del medio continuo con un enfoque práctico y visual. 
          Aprende teoría de elasticidad, tensores y más.
        </p>
        
        <!-- Redes sociales -->
        <div class="flex items-center gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="p-2 rounded-lg bg-gray-200 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-primary-100 dark:hover:bg-primary-900/30 hover:text-primary-600 dark:hover:text-primary-400 transition-all duration-200"
              aria-label={`Síguenos en ${social.name}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg
                class="w-5 h-5"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
                set:html={social.icon}
              />
            </a>
          ))}
        </div>
      </div>

      <!-- Enlaces del footer -->
      {footerLinks.map((section) => (
        <div>
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Línea divisoria y copyright -->
    <div class="py-6 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-500 dark:text-gray-400 text-center sm:text-left">
          © {currentYear} Mecánica del Medio Continuo. Todos los derechos reservados. Lo aprendí en Top Learning.
        </p>
        <p class="text-xs text-gray-400 dark:text-gray-500">
          Hecho con <span class="text-red-500" aria-label="amor">❤</span> para estudiantes de ingeniería
        </p>
      </div>
    </div>
  </div>
</footer>
